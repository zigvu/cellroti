<!-- BEGIN: Thumbnail View -->
<div class="small-12 medium-12 large-9 columns">
  <div class="card">
    <div class="title clearfix">
      <div class="text left">Highest Brand Effectiveness Frames</div>
    </div>
    <div class="content">
      <div class="row">
        <div class="small-12 columns">
          <div id="thumbnail-chart">
            <div id="thumbnail-chart-refresh">Click to refresh</div>
            <ul class="small-block-grid-2 medium-block-grid-4">

              <% (0..3).each do |i| %>
                <li data-reveal-id=<%= "thumbnail_li_#{i}_reveal" %> >
                  <a class="th" href="#">
                    <img src="/uploads/refresh_to_load.jpg">
                  </a>
                  <div class="thumbnail-description">
                    <div class="row">
                      <div class="small-12 columns"><b>Game:</b><div class="game"></div></div>
                      <div class="small-12 columns"><b>Time:</b><div class="time"></div></div>
                      <div class="small-12 columns"><b>Brand Group:</b><div class="bg"></div></div>
                      <div class="small-12 columns"><b>Brand Effectiveness:</b><div class="be"></div></div>
                    </div>
                  </div>
                </li>
              <% end %>

            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- END: Thumbnail View -->

<!-- BEGIN: Thumbnail pop-ups -->
<div id="thumbnail-chart-reveals">

  <% (0..3).each do |i| %>
    <div id=<%= "thumbnail_li_#{i}_reveal" %> class="reveal-modal large" data-reveal>
      <div class="thumbnail-container">
        <img class="thumbnail-image-reveal" src="/uploads/refresh_to_load.jpg">
        <div class="row">
          <div class="medium-6 large-4 columns"><b>Game:</b><div class="game"></div></div>
          <div class="medium-6 large-2 columns"><b>Time:</b><div class="time"></div></div>
          <div class="medium-6 large-4 columns"><b>Brand Group:</b><div class="bg"></div></div>
          <div class="medium-6 large-2 columns"><b>Score:</b><div class="be"></div></div>
        </div>
      </div>
      <a class="close-reveal-modal">&#215;</a>
    </div>
  <% end %>

</div>
<!-- END: Thumbnail pop-ups -->
