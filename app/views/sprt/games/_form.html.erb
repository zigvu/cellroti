<%= simple_form_for([:sprt, @game]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :venue_city %>
    <%= f.input :venue_stadium %>
    <%= f.hidden_field :season_id, value: @season.id %>
  </div>
  <div class="field">
    <i>(Click checkbox to delete team)</i>
    <ul class="small-block-grid-3">
      <%= f.fields_for :game_teams do |game_team| %>
        <li>
          <%= game_team.association :team, :as => :select %>
          <%= game_team.check_box :_destroy %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
