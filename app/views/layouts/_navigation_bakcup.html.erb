<!-- Navigation system that can handle both desktop and mobile screens -->

<!-- Mobile friendly menu -->
<div class="off-canvas-wrap" data-offcanvas>
  <div class="inner-wrap">
    <nav class="tab-bar hide-for-large-up">
      <section class="left-small">
        <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
      </section>
      <section class="middle tab-bar-section">
        <h1 class="title">Zigvu</h1>
      </section>
      <section class="right-small">
        <h1 class="title"><a class="fi-widget" href="#"><span></span></a></h1>
      </section>
    </nav>
    <aside class="left-off-canvas-menu">
      <ul class="off-canvas-list">
        <li><label>Analytics</label></li>
        <li><a href="#">Weekly Analysis</a></li>
        <li><a href="#">Competitor Watch</a></li>
        <li><a href="#">Custom Data Dashboard</a></li>
        <li><a href="#">Season Analysis</a></li>
      </ul>
    </aside>
    <section class="main-section">


<!-- Desktop friendly menu  -->
<div class="row show-for-large-up">
  <div class="small-12 columns">
    <div class="contain-to-grid">
      <nav class="top-bar" data-topbar role="navigation">
        <ul class="title-area">
          <li class="name">
            <h1><a href="#">Zigvu</a></h1>
          </li>
          <!-- This shouldn't be shown - but keep so that Foundation javascript is happy -->
          <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
        </ul>
        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="right">
            <li class="has-dropdown">
              <a class="fi-widget" href="#"><span></span></a>
              <ul class="dropdown">
                <li><a href="#">Sign Out</a></li>
                <li class="active"><a href="#">Account Settings</a></li>
              </ul>
            </li>
          </ul>
          <!-- Left Nav Section -->
          <ul class="left">
            <!-- <li><a href="#">Nothing for now</a></li> -->
          </ul>
        </section>
      </nav>
    </div>
  </div>
</div>


<!-- Content body - note padding = 0 for mobile views -->
<div class="row mobile-zero-pad-rows">
  <div class="small-12 columns mobile-zero-pad-columns">
    <div class="main-content">
      <div class="row" data-equalizer>
        <div class="large-2 columns show-for-large-up">
          <div class="zigvu-sidenav" data-equalizer-watch>
            <section>
              <ul>
                <li class="heading">Analytics</li>
                <li><a href="#"><div class="links">Weekly Analysis</div></a></li>
                <li><a href="#"><div class="links">Competitor Watch</div></a></li>
                <li><a href="#"><div class="links">Custom Data Dashboard</div></a></li>
                <li class="active"><a href="#"><div class="links">Season Analysis</div></a></li>
              </ul>
              </section>
          </div>
        </div>
        <div class="small-12 large-10 columns" data-equalizer-watch>
          <!-- Breadcrumbs -->
          <div class="row">
            <div class="small-12 columns">
              <ul class="breadcrumbs">
                <li><a href="#">Season Analysis</a></li>
                <li><a href="#">World Cup 2014</a></li>
                <li class="current"><a href="#">Summary</a></li>
              </ul>
            </div>
          </div>
          <!-- Yield for different pages -->
          <div class="row">
            <div class="small-12 columns">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


