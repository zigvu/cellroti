<!-- BEGIN: Overall body grid  -->
<div class="row mobile-zero-pad-rows">
  <div class="small-12 columns mobile-zero-pad-columns">
    <div class="contain-to-grid">


<!-- BEGIN: Navigation Menu  -->
<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="#">Zigvu</a></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
  <section class="top-bar-section">
    <%= render partial: 'layouts/navigation_topbar_right' %>
    <%= render partial: 'layouts/navigation_topbar_left' %>
  </section>
</nav>
<!-- END: Navigation Menu  -->


<!-- BEGIN: Content body -->
<div class="row">
  <div class="small-12 columns">
    <div class="content-border-container">
      <% if user_signed_in? %>
        <div class="row">
          <div class="small-12 columns">
            <%= breadcrumbs autoroot: false, style: :foundation5 %>
          </div>
        </div>
      <% end %>
      <%= render partial: 'layouts/error_notices' %>
      <!-- Yield for different pages -->
      <div class="row">
        <div class="small-12 columns">
          <div class="main-content">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END: Content body -->


<!-- BEGIN: Footer -->
<footer>
  <div class="row">
    <div class="medium-3 push-9 columns">
      <ul class="footer-social">
        <li><a class="fi-social-twitter" href="http://www.twitter.com/ZIGVU"><span></span></a></li>
        <li><a class="fi-social-facebook" href="http://www.facebook.com/ZIGVU"><span></span></a></li>
        <li><a class="fi-mail" href="#"><span></span></a></li>
      </ul>
    </div>
    <div class="medium-9 pull-3 columns">
      <div class="row">
        <div class="small-12 columns">
          <ul class="footer-links">
            <li><a href="#">About</a></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">News<span class="show-for-medium-up"> &amp; Events</span></a></li>
            <li><a href="#">Contact</a></li>
            <li><a href="#">Sitemap</a></li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <p class="footer-copyright">&copy; 2014 ZIGVU, Inc. All rights reserved.</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
    </div>
  </div>
</footer>
<!-- END: Footer -->


    </div>
  </div>
</div>
<!-- END: Overall body grid  -->
