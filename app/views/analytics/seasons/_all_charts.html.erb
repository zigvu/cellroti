<script type="text/javascript">
  window.seasonLabelPath = "/api/v1/analytics/seasons/" + <%= @season.id %>;
  window.seasonShowPath = "/api/v1/analytics/seasons/" + <%= @season.id %> + "/summary";
  window.gameShowPath = "/api/v1/analytics/seasons/" + <%= @season.id %> + "/game/";
  window.filterPath = "/api/v1/analytics/seasons/" + <%= @season.id %> + "/filter";
  window.clipIdPath = "/api/v1/analytics/seasons/" + <%= @season.id %> + "/clip_id";
  <% if @gameId != nil %>
    window.selectedGameId = <%= @gameId %>;
  <% end %>
</script>

<!-- BEGIN: All charts -->
<div class="d3-chart">

<!-- BEGIN: Row 1 -->
<div class="row" id="row-1">

<!-- BEGIN: Summary panels -->
<div class="small-12 medium-4 large-4 columns">
  <div class="card">
    <div class="title clearfix">
      <div class="text left">Summary</div>
      <div class="right">
      </div>
    </div>
    <div class="content">
<div class="row">
  <div class="small-6 medium-12 columns">
    <!-- BEGIN: Summary graphs -->
    <div class="row">
      <div class="small-6 columns">
        <div id="summary-chart-1"></div>
      </div>
      <div class="small-6 columns">
        <div id="summary-chart-2"></div>
      </div>
    </div>
    <div class="row">
      <div class="small-6 columns">
        <div id="summary-chart-3"></div>
      </div>
      <div class="small-6 columns">
        <div id="summary-chart-4"></div>
      </div>
    </div>
    <!-- END: Summary graphs -->
  </div>
  <div class="small-6 medium-12 columns">
    <!-- BEGIN: Legend -->
    <div  id="brand-legend">
      <div class="row">
        <div class="small-12 columns">

          <div class="brand-label-titles clearfix">
            <div class="left">Brand Groups</div>
            <div class="right">
              <span id="brand-legend-update-charts" class="settings-button" title="Change Brand Groups" data-reveal-id="brand-legend-update-reveal">
                <i class="fi-widget"></i>
              </span>
            </div>
          </div>

        </div>
        <div class="small-12 columns">
          <div id="brand-legend-content">
            <ul class="small-block-grid-1 large-block-grid-2" id="brand-legend-content-ul"></ul>
          </div>
        </div>
      </div>
    </div>
    <!-- END: Legend -->
  </div>
</div>

    </div>
  </div>
</div>
<!-- END: Summary panels -->


<!-- BEGIN: Timeline chart -->
<div class="small-12 medium-8 large-8 columns">
  <div class="card">
    <div class="title clearfix">
      <div id="timeline-chart-title" class="text left">Brand Effectiveness</div>
      <div class="right">
        <span id="reset-timeline-charts" class="button radius title-button title-button-unselected" title="Reset Chart">
          <i class="fi-refresh"></i>
        </span>
      </div>
    </div>
    <div class="content">
      <div class="row">
        <div class="small-12 columns">
          <div id="timeline-chart"></div>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <div id="brush-chart"></div>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <div id="game-selection-chart"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END: Timeline chart -->

<!-- END: Row 1 -->
</div>

<!-- BEGIN: Row 2 & 3 -->
<div class="row" id="row-2">

<!-- BEGIN: Bar chart component -->
<div class="small-12 medium-12 large-8 columns">
  <div class="card">
    <div class="title clearfix">
      <div class="text left">Brand Effectiveness Components</div>
      <div class="right">
        <span id="reset-component-charts" class="button radius title-button title-button-unselected" title="Reset Chart">
          <i class="fi-refresh"></i>
        </span>
      </div>
    </div>
    <div class="content">
      <div id="component-bar-chart"></div>
    </div>
  </div>
</div>
<!-- END: Bar chart component -->


<!-- BEGIN: Spatial position chart -->
<div class="small-6 medium-7 large-4 columns">
  <div class="card">
    <div class="title clearfix">
      <div class="text left">Spatial Position</div>
      <div class="right">
        <span id="reset-spatial-position-chart" class="button radius title-button title-button-unselected" title="Reset Chart">
          <i class="fi-refresh"></i>
        </span>
      </div>
    </div>
    <div class="content">
      <div id="spatial-position-chart"></div>
    </div>
  </div>
</div>
<!-- END: Spatial position chart -->


<!-- BEGIN: Brand Effectiveness -->
<div class="small-6 medium-5 large-3 columns">
  <div class="card">
    <div class="title clearfix">
      <div class="text left">Brand Effectiveness</div>
      <div class="right">
        <span id="reset-brand-effectiveness-bar-chart" class="button radius title-button title-button-unselected" title="Reset Chart">
          <i class="fi-refresh"></i>
        </span>
      </div>
    </div>
    <div class="content">
      <div id="brand-effectiveness-bar-chart"></div>
    </div>
  </div>
</div>
<!-- END: Bar chart component -->


<!-- BEGIN: Thumbnail View -->
<div class="small-12 medium-12 large-9 columns">
  <div class="card">
    <div class="title clearfix">
      <div class="text left">Highest Brand Effectiveness Frames</div>
    </div>
    <div class="content">
      <div class="row">
        <div class="small-12 columns">
          <div id="thumbnail-chart">
            <div id="thumbnail-chart-refresh">Click to refresh</div>
            <ul class="small-block-grid-2 medium-block-grid-4">

              <% (0..3).each do |i| %>
                <li data-reveal-id=<%= "thumbnail_li_#{i}_reveal" %> >
                  <a class="th" href="#">
                    <img src="/uploads/refresh_to_load.jpg">
                  </a>
                  <div class="thumbnail-description">
                    <div class="row">
                      <div class="small-12 columns"><b>Game:</b><div class="game"></div></div>
                      <div class="small-12 columns"><b>Time:</b><div class="time"></div></div>
                      <div class="small-12 columns"><b>Brand Group:</b><div class="bg"></div></div>
                      <div class="small-12 columns"><b>Brand Effectiveness:</b><div class="be"></div></div>
                    </div>
                  </div>
                </li>
              <% end %>

            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- END: Thumbnail View -->

</div>
<!-- END: Row 2 & 3 -->

</div>
<!-- END: All charts -->


<!-- BEGIN: Thumbnail pop-ups -->
<div id="thumbnail-chart-reveals">

  <% (0..3).each do |i| %>
    <div id=<%= "thumbnail_li_#{i}_reveal" %> class="reveal-modal large" data-reveal>
      <div class="thumbnail-container">
        <div class="flex-video widescreen">
          <video controls preload="none" poster="/uploads/refresh_to_load.jpg" class="thumbnail-image-reveal">
          </video>
        </div>
        <div class="row">
          <div class="medium-6 large-4 columns"><b>Game:</b><div class="game"></div></div>
          <div class="medium-6 large-2 columns"><b>Time:</b><div class="time"></div></div>
          <div class="medium-6 large-4 columns"><b>Brand Group:</b><div class="bg"></div></div>
          <div class="medium-6 large-2 columns"><b>Score:</b><div class="be"></div></div>
        </div>
      </div>
      <a class="close-reveal-modal">&#215;</a>
    </div>
  <% end %>

</div>
<!-- END: Thumbnail pop-ups -->

<!-- BEGIN: Update legend pop-up -->
<div id="brand-legend-update-reveal" class="reveal-modal large" data-reveal>
  <%= render '/analytics/seasons/update_det_groups' %>
</div>
<!-- END: Update legend pop-up -->
