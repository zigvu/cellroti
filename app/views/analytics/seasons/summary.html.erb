  <!-- END: View Duration pie chart whole -->

  <!-- BEGIN: Heatmap chart whole -->
  <div class="small-12 medium-12 large-6 large-pull-3 columns">
    <div class="chart-panel">
      <div class="chart-title clearfix">
        <div class="text left">Spatial Position</div>
        <div class="help right">
          <ul class="button-group radius">
            <li data-reveal-id="heatmap-chart-info-reveal" id="heatmap-chart-info">
              <span class="button title-button" title="Help!">
                <i class="fi-info"></i>
              </span>
            </li>
          </ul>
        </div>
      </div>
      <div class="chart-content">
        <div id="heatmap-chart"></div>
      </div>
    </div>
  </div>
  <!-- END: Heatmap chart whole -->
</div>

<div class="row">
  <div class="small-12 columns">
    <ul class="small-block-grid-2 medium-block-grid-4">
      <li><div class="panel">Some Representative thumbnails</div></li>
      <li><div class="panel">Some Representative thumbnails</div></li>
      <li><div class="panel">Some Representative thumbnails</div></li>
      <li><div class="panel">Some Representative thumbnails</div></li>
    </ul>   
  </div>
</div>



