<% breadcrumb :analytics_season_summary, @season %>

<script type="text/javascript">
  window.seasonLabelPath = "/api/v1/analytics/seasons/" + <%= @season.id %>;
  window.seasonShowPath = "/api/v1/analytics/seasons/" + <%= @season.id %> + "/summary";
  window.gameShowPath = "/api/v1/analytics/seasons/" + <%= @season.id %> + "/game/";
</script>

<%= render 'summary_panel' %>

<!-- BEGIN: All charts -->
<div class="d3-chart">

<!-- BEGIN: Series chart whole -->
<div class="row">
  <div class="small-12 columns">
    <div class="chart-panel">
      
      <!-- BEGIN: Series chart title bar row -->
      <div class="row">
        <div class="small-12 columns">
          <div class="chart-title clearfix">
            <div class="text left">Brand Effectiveness</div>
            <div class="help right">
              <ul class="button-group radius">
                <li id="reset-charts">
                  <span class="button title-button" title="Reset Chart">
                    <i class="fi-refresh"></i>
                  </span>
                </li>
                <li data-reveal-id="series-chart-info-reveal" id="series-chart-info">
                  <span class="button title-button" title="Help!">
                    <i class="fi-info"></i>
                  </span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- END: Series chart title bar row -->
      
      <!-- BEGIN: Series chart row -->
      <div class="row">
        <div class="small-12 columns">
          <div class="chart-content">
            <div class="row">
              <div class="small-12 columns">
                <div id="series-chart"></div>
              </div>
            </div>
            <div class="row">
              <div class="small-12 columns">
                <div id="brush-chart"></div>
              </div>
            </div>
            <div class="row">
              <div class="small-12 columns">
                <div id="game-selection-chart"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END: Series chart row -->

      <!-- BEGIN: Legend row -->
      <div class="row">
        <div class="small-12 columns" id="brand-legend-container-column">
          <div id="brand-legend">

            <!-- BEGIN: Legend normal -->
            <div id="brand-legend-normal">
              <div class="row">                
                <div class="small-7 medium-10 columns">
                    <div class="brand-label-titles">Brand Groups</div>
                    <div id="brand-legend-content">
                      <ul id="brand-legend-content-ul"></ul>
                    </div>
                </div>
                <div class="small-5 medium-2 columns">
                    <div class="brand-label-titles">Chart Tools</div>
                    <ul class="button-group radius stack" id="brand-legend-buttons">
                      <li>
                        <div class="button small expand success" id="brand-legend-update-charts">
                          Update Charts
                        </div>
                      </li>
                      <li>
                        <div class="button small expand secondary" id="brand-legend-generate-report">
                          Generate Report
                        </div>
                      </li>
                      <li>
                        <div class="button small expand" id="brand-legend-normal-hide">
                          Hide Legend
                        </div>
                      </li>
                    </ul>
                </div>
              </div>
            </div>
            <!-- END: Legend normal -->

            <!-- BEGIN: Legend hidden -->
            <div id="brand-legend-hidden">
              <div class="row">                
                <div class="small-7 medium-10 columns">
                  <div class="brand-legend-hidden-text">Click to show legend</div>
                </div>
                <div class="small-5 medium-2 columns">
                  <div class="button small radius expand" id="brand-legend-hidden-show">
                    Show Legend
                  </div>
                </div>
              </div>
            </div>
            <!-- END: Legend hidden -->

          </div>
        </div>
      </div>
      <!-- END: Legend row -->

    </div>
  </div>
</div>
<!-- END: Series chart whole -->

<!-- BEGIN: Bar chart component whole -->
<div class="row">
  <div class="small-12 columns">
    <div class="chart-panel">
      <div class="chart-title clearfix">
        <div class="text left">Brand Effectiveness Components</div>
        <div class="help right">
          <ul class="button-group radius">
            <li data-reveal-id="component-bar-chart-info-reveal" id="component-bar-chart-info">
              <span class="button title-button" title="Help!">
                <i class="fi-info"></i>
              </span>
            </li>
          </ul>
        </div>
      </div>
      <div class="chart-content">
        <div id="component-bar-chart"></div>
      </div>
    </div>
  </div>
</div>
<!-- END: Bar chart component whole -->


<div class="row">
