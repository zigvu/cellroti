<% breadcrumb :analytics_season_show, @season %>

<p>
<%= link_to 'Show Season Summary', summary_analytics_season_path(@season) %>
</p>

<table>
  <thead>
    <tr>
      <th>Game Id</th>
      <th>Game Name</th>
      <th>Show Analytics</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.name %></td>
        <td><%= link_to 'Show Analytics', game_analytics_season_path(@season, game_id: game.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

