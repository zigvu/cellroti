<% breadcrumb :clients %>

<h3>Listing clients</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pretty name</th>
      <th>Description</th>
      <th width="80px">Manage Users</th>
      <th width="100px">Edit Detect.</th>
      <th width="100px">Edit</th>
      <th width="70px">Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.pretty_name %></td>
        <td><%= client.description %></td>
        <td><%= link_to 'Manage Users', manage_users_admin_client_path(client) %></td>
        <td><%= link_to 'Edit Detect.', [:admin, client] %></td>
        <td><%= link_to 'Edit Client', edit_admin_client_path(client) %></td>
        <td><%= link_to 'Destroy', [:admin, client], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Client', new_admin_client_path, class: "button" %>
